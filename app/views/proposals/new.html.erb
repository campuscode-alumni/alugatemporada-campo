<%= form_for([@property, @proposal]) do |f| %>
<div>
  <%= f.label :name, 'Nome' %>
  <%= f.text_field :name  %>
</div>
<div>
  <%= f.label :email, 'Email' %>
  <%= f.text_field :email  %>
</div>
<div>
  <%= f.label :phone, 'Telefone' %>
  <%= f.text_field :phone  %>
</div>
<div>
  <%= f.label :rent_purpose, 'Finalidade' %>
  <%= f.text_field :rent_purpose %>
</div>
<div>
  <%= f.label :total_guest, 'Quantidade de hospedes' %>
  <%= f.text_field :total_guest  %>
</div>
<div>
  <%= f.label :start_date, 'Data de entrada' %>
  <%= f.text_field :start_date  %>
</div>
<div>
  <%= f.label :end_date, 'Data de saída' %>
  <%= f.text_field :end_date  %>
</div>
<div>
  <%= f.label :pet, 'Pretende levar pets?' %>
  <%= f.check_box :pet  %>
</div>
<div>
  <%= f.label :smoker, 'Fumante?' %>
  <%= f.check_box :smoker %>
</div>
<div>
  <%= f.label :total_amount, 'Valor da proposta' %>
  <%= f.text_field :total_amount  %>
</div>
<div>
  <%= f.label :details, 'Mais informações' %>
  <%= f.text_field :details  %>
</div>
<%= f.submit 'Enviar' %>
<% end %>
